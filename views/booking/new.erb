<% if @user %>
  <div>
    <form action="/booking/create/<%= @space.id %>" method="post" id="booking-form">
      <div class="form-heading">
        Book <%= @space.name %>
      </div>

      <div class="booking-form-field">
        <label for="checkin">Check In</label>
        <input type="date" id="checkin" name="checkin">
      </div>

      <div class="booking-form-field">
        <label for="checkout">Check Out</label>
        <input type="date" id="checkout" name="checkout">
      </div>

      <div class="booking-form-field">
        <input type="submit" value="submit" class="booking-submit">
      </div>
    </form>
  </div>
<% else %>
  <div id="login-prompt">
    <p>You need to be logged in to make a booking</p>
    <p><a href="/login">Login</a> or <a href="signup">Sign up</a> now</p>
  </div>
<% end %>